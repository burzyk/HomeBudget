<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    <persistence-unit name="com.jpbnetsoftware.homebudget.data">
        <description>
            Persistence unit for the HomeBudget application
        </description>
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <class>com.jpbnetsoftware.homebudget.data.entities.BaseEntity</class>
        <class>com.jpbnetsoftware.homebudget.data.entities.User</class>

        <properties>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://192.168.1.120:3306/home_budget"/>
            <property name="javax.persistence.jdbc.user" value="home_budget"/>
            <property name="javax.persistence.jdbc.password" value="home_budget"/>

            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
        </properties>
    </persistence-unit>
</persistence>